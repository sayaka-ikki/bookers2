<div class="col-md-3">

  <h2>User info</h2>
  <% @users.each do |user| %>
    <%= image_tag user.profile_image,size: "100x100" %>
    <table>
      <tr>
        <th>name</th><td><%= user.name %></td>
      </tr>
      <tr>
        <th>introduction</th><td><%= user.introduction %></td>
      </tr>
    </table>
    <%= button_to edit_user_path(user.id), method: :get do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  <% end %>

  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <div>
        <label>Title</label>
    </div>
    <%= f.text_field :title %>
    <div>
      <label>Opinion</label>
    </div>
    <%= f.text_area :opinion %>
    <br><%= f.submit 'Create Book' %>
  <% end %>

</div>
