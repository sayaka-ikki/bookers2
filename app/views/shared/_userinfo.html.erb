<h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table>
    <tr>
      <th>name</th><td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th><td><%= user.introduction %></td>
    </tr>
  </table>
    <%= link_to edit_user_path(user) do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
