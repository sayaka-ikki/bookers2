<h2>Editing Book</h2>
  <%= form_with model: @book_id do |f| %>
    <div>
        <label>Title</label>
    </div>
    <%= f.text_field :title %>
    <div>
      <label>Opinion</label>
    </div>
    <%= f.text_area :body %>
    <br><%= f.submit 'Update Book' %>
  <% end %>
  <%= link_to 'Show',book_path(@book_id) %>
  <%= link_to 'Back',books_path %>
