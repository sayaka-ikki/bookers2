<div class="row">
  <div class="col-md-3">

    <h2>User info</h2>
    <% @users.each do |user| %>
    <table>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </table>
    <%= button_to edit_user_path(user.id), method: :get do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  <% end %>


    <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <div>
            <label>Title</label>
        </div>
          <%= f.text_field :title %>
        <div>
            <label>Opinion</label>
        </div>
        <%= f.text_area :Opinion %>
        <br><%= f.submit 'Create Book' %>
      <% end %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <% @users.each do |user| %>
    <tr>
      <th><%= user.name %></th>
    </tr>
    <% end %>
  </div>
</div>



