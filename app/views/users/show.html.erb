<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'shared/userinfo',user: @user %>
      <%= render 'shared/newbook',book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <tr>
          <th></th><th>Title</th><th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to image_tag(@user.get_profile_image(80,80)), user_path(@user) %></td>
          <td><%= link_to book.title, book_path(book)%></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>